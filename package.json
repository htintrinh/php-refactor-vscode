{
    "name": "php-refactor",
    "displayName": "PHP Refactor",
    "description": "",
    "version": "0.0.1",
    "publisher": "tintrinh",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:php.extractFunction"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "php.extractFunction",
                "title": "PHP Refactor: Extract Function"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42",
        "php-parser": "^3.0.0-prerelease.5",
        "php-unparser": "^0.2.9"
    }
}
